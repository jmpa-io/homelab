
# {{ ansible_managed }}

[Unit]
Description=dnsmasq_exporter
Documentation=https://github.com/google/dnsmasq_exporter
After=network-online.target dnsmasq.service
Wants=network-online.target dnsmasq.service

[Service]
Type=simple
ExecStart=/usr/local/bin/dnsmasq_exporter --listen {{ ansible_host }}:{{ host.host_services | selectattr('name','equalto','dnsmasq_exporter') | map(attribute='metrics_port') | first }}
Restart=always
RestartSec=90s

[Install]
WantedBy=multi-user.target

