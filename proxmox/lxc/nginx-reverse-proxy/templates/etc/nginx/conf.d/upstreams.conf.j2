{# Group services across servers. #}
{% set service_map = {} %}
{% for host, vars in hostvars.items() %}
  {% if vars.get('services') %}
    {% set nginx_service = vars.services.get('nginx_reverse_proxy', {}) %}
    {% for service in nginx_service.get('static_records', []) %}
      {% set name = service.get('subdomain') %}
      {% set target = service.get('forward_to_ipv4_with_port') %}
      {% if name and target %}
        {% set _ = service_map.setdefault(name, []).append(target) %}
      {% endif %}
    {% endfor %}
  {% endif %}
{% endfor %}

# Proxmox.
upstream proxmox {
    least_conn;
{% for ip in service_map.get('proxmox', []) %}
    server {{ ip }};
{% endfor %}
}

{# Create entries. #}
{% for subdomain, targets in service_map.items() if subdomain != 'proxmox' %}

# {{ subdomain | title }}.
upstream {{ subdomain }} {
    least_conn;
{% for ip in targets %}
    server {{ ip }};
{% endfor %}
}

{% endfor %}

