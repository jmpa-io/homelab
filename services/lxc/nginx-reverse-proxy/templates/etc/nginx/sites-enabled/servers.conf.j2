
# {{ ansible_managed }}

{% macro proxy_headers(name, domain) -%}
    proxy_set_header Host {{ name }}.{{ domain }};
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "Upgrade";
{%- endmacro %}

{% set upstreams =
  {'proxmox': {
      'backends': [hostvars[h].ansible_host ~ ':' ~ hostvars[h]['proxmox']['default_ui_port'] for h in groups['all']],
      'protocol': 'https'
  }}
  | combine(common.global_service_map)
%}

server {
    listen 443 ssl{% if loop.first %} default_server{% endif %};
    listen [::]:443 ssl{% if loop.first %} default_server{% endif %};
    server_name {{ name }}.{{ common['dns']['domain'] }} ~^{{ name }}\..+\.{{ common['dns']['domain'] }}$;

    ssl_certificate     /etc/ssl/certs/self-signed.crt;
    ssl_certificate_key /etc/ssl/private/self-signed.key;

    location / {
        proxy_pass {{ protocol }}://{{ name }};
        {% if protocol == 'https' %}
        proxy_ssl_verify off;
        {% endif %}

        proxy_set_header Host {{ name }}.{{ common['dns']['domain'] }};
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";

        # --- Grafana-specific headers ---
        {% if name == 'grafana' %}
        proxy_set_header X-WEBAUTH-USER "";
        proxy_redirect off;
        proxy_http_version -1.1;
        proxy_buffering off;
        proxy_request_buffering off;
        {% endif %}
    }
}
{% endfor %}
